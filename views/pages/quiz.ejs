<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4cc9f0;
      --light-color: #f8f9fa;
      --dark-color: #212529;
      --success-color: #4caf50;
      --danger-color: #f44336;
    }
    
    body {
      background-color: #f5f7fb;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .card {
      border: none;
      border-radius: 12px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
      overflow: hidden;
    }
    
    .card-header {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      color: white;
      padding: 1.25rem 1.5rem;
      border-bottom: none;
    }
    
    .card-header h5 {
      margin: 0;
      font-weight: 600;
      display: flex;
      align-items: center;
    }
    
    .card-header h5 i {
      margin-right: 10px;
    }
    
    .card-body {
      padding: 2rem;
    }
    
    .question-text {
      font-size: 1.25rem;
      font-weight: 500;
      color: var(--dark-color);
      margin-bottom: 1.5rem;
      line-height: 1.5;
    }
    
    .options-list {
      border-radius: 8px;
      overflow: hidden;
      margin-bottom: 2rem;
    }
    
    .option-item {
      padding: 1rem 1.25rem;
      border: 1px solid #e0e0e0;
      border-bottom: none;
      transition: all 0.2s ease;
      cursor: pointer;
      display: flex;
      align-items: center;
    }
    
    .option-item:last-child {
      border-bottom: 1px solid #e0e0e0;
    }
    
    .option-item:hover {
      background-color: rgba(76, 201, 240, 0.05);
    }
    
    .option-item.selected {
      background-color: rgba(67, 97, 238, 0.1);
      border-left: 4px solid var(--primary-color);
    }
    
    .form-check-input {
      width: 1.25em;
      height: 1.25em;
      margin-right: 1rem;
      cursor: pointer;
    }
    
    .form-check-input:checked {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
    }
    
    .btn-primary {
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      border: none;
      border-radius: 8px;
      padding: 0.75rem 1.5rem;
      font-weight: 500;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
    }
    
    .btn-primary i {
      margin-right: 8px;
    }
    
    .progress-container {
      margin-bottom: 1.5rem;
    }
    
    .progress {
      height: 8px;
      border-radius: 4px;
    }
    
    .progress-bar {
      background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
    }
    
    .question-counter {
      font-size: 0.9rem;
      color: #6c757d;
      text-align: right;
      margin-bottom: 0.5rem;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar', { user }) %>
  
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <h5><i class="fas fa-question-circle"></i> <%= category %> Quiz - Question <%= current %> of <%= total %></h5>
          </div>
          <div class="card-body">
            <div class="progress-container">
              <div class="question-counter">
                Question <%= current %> of <%= total %>
              </div>
              <div class="progress">
                <div class="progress-bar" style="width: <%= (current/total)*100 %>%"></div>
              </div>
            </div>
            
            <h4 class="question-text"><%= question.question %></h4>
            
            <form action="/quiz" method="POST">
              <div class="options-list">
                <% Object.entries(question.options).forEach(([key, value]) => { %>
                  <label class="option-item">
                    <input class="form-check-input" type="radio" name="answer" value="<%= key %>" required>
                    <span class="option-text"><%= key %>. <%= value %></span>
                  </label>
                <% }) %>
              </div>
              
              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                  <% if (current === total) { %>
                    <i class="fas fa-flag-checkered"></i> Finish Quiz
                  <% } else { %>
                    <i class="fas fa-arrow-right"></i> Next Question
                  <% } %>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Font Awesome for icons -->
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    // Add selected class to clicked option
    document.querySelectorAll('.option-item').forEach(item => {
      item.addEventListener('click', function() {
        document.querySelectorAll('.option-item').forEach(i => i.classList.remove('selected'));
        this.classList.add('selected');
      });
    });
  </script>
</body>
</html>